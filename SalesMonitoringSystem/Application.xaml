<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SalesMonitoringSystem"
    StartupUri="Forms/Login.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>

                <ResourceDictionary Source="/Resources/imgs/ImageResource.xaml"/>
                <ResourceDictionary Source="/Resources/strings/StringResource.xaml"/>
                <ResourceDictionary Source="/Resources/styles/StyleResource.xaml"/>
                <ResourceDictionary Source="/Resources/colors/ColorResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
