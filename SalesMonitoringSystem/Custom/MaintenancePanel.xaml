<UserControl x:Class="MaintenancePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesMonitoringSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <Grid>
        <hc:TabControl x:Name="TabControlContainer"
                       ShowCloseButton="False"
                       IsDraggable="False"
                       IsTabFillEnabled="True"
                       Grid.RowSpan="2">
            <hc:TabItem  Header="Accounts">
                <local:AccountsPanel/>
            </hc:TabItem>
            <hc:TabItem Header="Categories">
                <local:CategoriesPanel/>
            </hc:TabItem>
            <hc:TabItem Header="Suppliers">
                <local:SuppliersPanel x:Name="SupplierPanelWrapper"/>
            </hc:TabItem>
            <hc:TabItem Header="Delivery">
                <local:DeliveryPanel x:Name="Delivery"/>
            </hc:TabItem>
        </hc:TabControl>
    </Grid>
</UserControl>
