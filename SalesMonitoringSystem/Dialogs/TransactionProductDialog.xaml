<UserControl x:Class="TransactionProductDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesMonitoringSystem"
             mc:Ignorable="d" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Width="500">
    <Grid Background="{StaticResource ApplicationPrimaryLight}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <hc:SimplePanel Background="{StaticResource ApplicationDimBlue}">
            <TextBlock Text="Product"
                       Foreground="{StaticResource ApplicationLight}"
                       FontSize="24"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="30 0 0 0"/>
            <Button Name="Closebtn"
                    Height="30"
                    Width="30"
                    Style="{StaticResource ButtonIcon}"
                    hc:IconElement.Geometry="{StaticResource ErrorGeometry}"
                    Command="hc:ControlCommands.Close"
                    Margin="0 0 30 0"
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
        </hc:SimplePanel>
        <StackPanel Orientation="Vertical"
                    Grid.Row="1"
                    Margin="30 8"
                    VerticalAlignment="Center">
            <StackPanel Margin="0 8 0 0">
                <TextBlock HorizontalAlignment="Left"
                           Text="PRODUCT NAME: "
                           FontSize="18"
                           Padding="0 0 8 0"
                           FontWeight="Bold"/>
                <hc:ComboBox Name="ProductNameComboBox"
                             HorizontalAlignment="Stretch"
                             hc:BorderElement.CornerRadius="0"
                             Height="40"
                             IsEditable="True"/>
            </StackPanel>
            <StackPanel Margin="0 8 0 0">
                <TextBlock Padding="0 0 0 5"
                           Text="SELLING PRICE: "
                           FontSize="18"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
                <TextBox Name="SellingPriceTextBox"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                         Height="40"
                         IsEnabled="False"/>
            </StackPanel>
            <StackPanel Margin="0 8 0 0">
                <TextBlock Padding="0 0 0 5"
                           Text="REMAING STOCKS: "
                           FontSize="18"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
                <TextBox Name="QuantityAvailable"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                         Height="40"
                         IsEnabled="False"/>
            </StackPanel>
            <StackPanel Margin="0 8 0 0">
                <TextBlock HorizontalAlignment="Left"
                           Text="QUANTITY: "
                           FontSize="18"
                           Padding="0 0 0 5"
                           FontWeight="Bold"/>
                <TextBox Name="QuantityTextBox"
                         Text="{Binding QUANTITY}"
                         HorizontalAlignment="Stretch"
                         hc:BorderElement.CornerRadius="0"
                         Height="40" InputScope="Number"/>
            </StackPanel>
        </StackPanel>
        <hc:SimplePanel Grid.Row="2">
            <hc:FlexPanel JustifyContent="FlexEnd">
                <Button Name="SaveButton"
                        Margin="0 0 30 0"
                        Foreground="{StaticResource ApplicationPrimaryLight}"
                        FontSize="16"
                        hc:BorderElement.CornerRadius="0"
                        Content="SAVE"
                        Height="40"
                        Width="140"
                        BorderThickness="0"
                        Background="{StaticResource ApplicationPrimaryDark}"/>
            </hc:FlexPanel>
        </hc:SimplePanel>
    </Grid>
</UserControl>
